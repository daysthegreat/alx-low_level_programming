# Makefile for building 'school' executable

# Variables
CC := gcc
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

# Default rule
all: $(NAME)

# Compilation and linking
$(NAME): $(OBJ) m.h
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ) -I.

# Rule to clean temporary and executable files
clean:
	$(RM) *~ \#*\# $(NAME)

# Rule to clean object files
oclean:
	$(RM) $(OBJ)

# Rule to clean all temporary, executable, and object files
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all

# Disable implicit rules
.SUFFIXES:

# Prevent make from removing intermediate object files
.PRECIOUS: $(OBJ)
